<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.



    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.



        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorAccent">@color/app_red</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/app_red</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="form_edttext_fields_style">
        <item name="android:textSize">@dimen/x10</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
    </style>
    <style name="CalenderWeekText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/app_red</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="CalenderHeaderText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">@color/app_red</item>
    </style>
    <!--<style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>-->

    <style name="SpinnerTheme">
        <item name="android:background">@drawable/spinner_background</item>
    </style>


</resources>