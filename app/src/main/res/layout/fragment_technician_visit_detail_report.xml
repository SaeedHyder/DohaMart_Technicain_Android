<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardCornerRadius="@dimen/x5"
            app:cardElevation="3dp"
            app:cardMaxElevation="5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:orientation="horizontal">

                    <com.ingic.ezhalbatek.technician.ui.views.AnyTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:paddingEnd="@dimen/x5"
                        android:paddingStart="@dimen/x10"
                        android:text="@string/customer_name"
                        android:textColor="@color/app_red"
                        android:textSize="@dimen/x14"
                        app:typeface="@string/font_normal_dark" />

                    <com.ingic.ezhalbatek.technician.ui.views.AnyTextView
                        android:id="@+id/txtCustomerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:text="John Doe"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x14"
                        app:typeface="@string/font_normal_dark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:orientation="horizontal">

                    <com.ingic.ezhalbatek.technician.ui.views.AnyTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:paddingEnd="@dimen/x5"
                        android:paddingStart="@dimen/x10"
                        android:text="@string/_date"
                        android:textColor="@color/app_red"
                        android:textSize="@dimen/x14"
                        app:typeface="@string/font_normal_dark" />

                    <com.ingic.ezhalbatek.technician.ui.views.AnyTextView
                        android:id="@+id/txtDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="January 2018"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x14"
                        app:typeface="@string/font_normal_dark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:orientation="horizontal">

                    <com.ingic.ezhalbatek.technician.ui.views.AnyTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:paddingEnd="@dimen/x5"
                        android:paddingStart="@dimen/x10"
                        android:text="@string/time"
                        android:textColor="@color/app_red"
                        android:textSize="@dimen/x14"
                        app:typeface="@string/font_normal_dark" />

                    <com.ingic.ezhalbatek.technician.ui.views.AnyTextView
                        android:id="@+id/txtTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="3:00 PM"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x14"
                        app:typeface="@string/font_normal_dark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:layout_marginBottom="@dimen/x10"
                    android:orientation="horizontal">

                    <com.ingic.ezhalbatek.technician.ui.views.AnyTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:paddingEnd="@dimen/x5"
                        android:paddingStart="@dimen/x10"
                        android:text="@string/package_type"
                        android:textColor="@color/app_red"
                        android:textSize="@dimen/x14"
                        app:typeface="@string/font_normal_dark" />

                    <com.ingic.ezhalbatek.technician.ui.views.AnyTextView
                        android:id="@+id/txtSubscriptionPackage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:text="Silver Package"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x14"
                        app:typeface="@string/font_normal_dark" />
                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_marginBottom="@dimen/x10"

                    android:background="@color/camera_color" />

                <LinearLayout
                    android:id="@+id/ll_jobs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.ingic.ezhalbatek.technician.ui.views.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/x10"
                        android:layout_marginTop="@dimen/x5"
                        android:gravity="center"
                        android:text="@string/jobs"
                        android:textColor="@color/app_red"
                        android:textSize="@dimen/x14"
                        app:typeface="@string/font_normal_dark" />

                    <com.ingic.ezhalbatek.technician.ui.views.CustomRecyclerView
                        android:id="@+id/rvJobs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x10"
                        android:layout_marginTop="@dimen/x5"
                        android:paddingBottom="@dimen/x5" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_additional_jobs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.ingic.ezhalbatek.technician.ui.views.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/x10"
                        android:layout_marginTop="@dimen/x5"
                        android:gravity="center"
                        android:text="@string/addtional_task_"
                        android:textColor="@color/app_red"
                        android:textSize="@dimen/x14"
                        app:typeface="@string/font_normal_dark" />

                    <com.ingic.ezhalbatek.technician.ui.views.CustomRecyclerView
                        android:id="@+id/rvAddtionalJobs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x10"
                        android:layout_marginTop="@dimen/x5"
                        android:paddingBottom="@dimen/x10" />

                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>