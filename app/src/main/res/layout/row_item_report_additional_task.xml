<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/x5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <com.ingic.ezhalbatek.technician.ui.views.AnyTextView
        android:id="@+id/txtTaskDetail"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/x1"
        android:layout_toEndOf="@id/delete_text"
        android:gravity="start"
        android:textAlignment="viewStart"
        android:maxLines="1"
        android:text="Checked Air Conditioner"
        android:textColor="@color/app_font_black"
        android:textSize="@dimen/x14"
        android:textStyle="normal"
        app:typeface="@string/font_normal_dark" />

    <com.ingic.ezhalbatek.technician.ui.views.AnyTextView
        android:id="@+id/txt_Quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginEnd="@dimen/x10"
        android:gravity="center"
        android:maxLines="1"
        android:text="Qty 2"
        android:textSize="@dimen/x15"
        android:textStyle="normal"
        app:typeface="@string/font_normal_dark" />
    </LinearLayout>
</RelativeLayout>