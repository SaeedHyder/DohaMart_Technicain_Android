<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        app:cardCornerRadius="@dimen/x5"
        app:cardElevation="3dp"
        app:cardMaxElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/x10"
            android:paddingBottom="@dimen/x10"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x15"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:orientation="horizontal">

                <com.ingic.ezhalbatek.technician.ui.views.AnyTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="center"

                    android:text="@string/subscriber_id"
                    android:textColor="@color/app_red"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/font_normal_dark" />

                <com.ingic.ezhalbatek.technician.ui.views.AnyTextView
                    android:id="@+id/txtSubscriptionID"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/x5"
                    android:gravity="center"
                    android:text="012"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/font_normal_dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:orientation="horizontal">

                <com.ingic.ezhalbatek.technician.ui.views.AnyTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="center"

                    android:text="@string/customer_name"
                    android:textColor="@color/app_red"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/font_normal_dark" />

                <com.ingic.ezhalbatek.technician.ui.views.AnyTextView
                    android:id="@+id/txtCustomerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/x5"
                    android:maxLines="1"
                    android:text="Curtis"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/font_normal_dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:orientation="horizontal">

                <com.ingic.ezhalbatek.technician.ui.views.AnyTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="center"

                    android:text="@string/subscription_package"
                    android:textColor="@color/app_red"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/font_normal_dark" />

                <com.ingic.ezhalbatek.technician.ui.views.AnyTextView
                    android:id="@+id/txtSubscriptionPackage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:text="Silver Package"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:layout_marginStart="@dimen/x5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/font_normal_dark" />
            </LinearLayout>

            <Button
                android:id="@+id/btnViewDetail"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x40"
                android:layout_centerInParent="true"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/x20"
                android:layout_marginBottom="@dimen/x15"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30"
                android:background="@drawable/button_red"
                android:text="@string/view_details"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>