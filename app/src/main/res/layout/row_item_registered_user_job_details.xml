<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        app:cardCornerRadius="@dimen/x1"
        app:cardElevation="3dp"
        app:cardMaxElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:orientation="horizontal">

            <com.ingic.ezhalbatek.technician.ui.views.AnyTextView
                android:id="@+id/txtItem"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/chkStatus"
                android:gravity="start"
                android:paddingEnd="@dimen/x2"
                android:paddingStart="@dimen/x10"
                android:text="Air Conditioner"
                android:textColor="@color/app_font_black"
                android:textSize="@dimen/x15"
                app:typeface="@string/font_normal_dark"/>

            <com.ingic.ezhalbatek.technician.ui.views.AnyTextView
                android:id="@+id/txt_Quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:gravity="center"
                android:maxLines="1"
                android:text="Qty 2"
                android:textSize="@dimen/x15"
                android:textStyle="normal"
                app:typeface="@string/font_normal_dark" />


            <CheckBox
                android:id="@+id/chkStatus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x10"
                android:padding="@dimen/x10"
                android:layout_marginEnd="@dimen/x10"
                android:button="@drawable/selector_checkbox"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>