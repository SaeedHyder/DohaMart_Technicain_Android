<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x5"
            app:cardCornerRadius="@dimen/x5"
            app:cardElevation="3dp"
            app:cardMaxElevation="5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/x10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:orientation="vertical">

                    <com.ingic.ezhalbatek.technician.ui.views.AnyTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:paddingEnd="@dimen/x2"
                        android:text="@string/item"
                        android:textColor="@color/app_red"
                        android:textSize="@dimen/x14"
                        app:typeface="@string/font_normal_dark"/>

                    <com.ingic.ezhalbatek.technician.ui.views.AnySpinner
                        android:id="@+id/spnItem"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x50"
                        android:layout_marginTop="@dimen/x10"
                        style="@style/SpinnerTheme"
                        android:spinnerMode="dropdown"
                        android:dropDownSelector="@color/app_red"
                       android:popupBackground="@color/white"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:orientation="vertical">

                    <com.ingic.ezhalbatek.technician.ui.views.AnyTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:paddingEnd="@dimen/x2"
                        android:text="@string/brand"
                        android:textColor="@color/app_red"
                        android:textSize="@dimen/x14"
                        app:typeface="@string/font_normal_dark"/>

                    <com.ingic.ezhalbatek.technician.ui.views.AnySpinner
                        android:id="@+id/spnBrand"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x50"
                        android:layout_marginTop="@dimen/x10"
                        style="@style/SpinnerTheme"
                        android:spinnerMode="dropdown"
                        android:dropDownSelector="@color/app_red"
                        android:popupBackground="@color/white"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:orientation="vertical">

                    <com.ingic.ezhalbatek.technician.ui.views.AnyTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:paddingEnd="@dimen/x2"
                        android:text="@string/type"
                        android:textColor="@color/app_red"
                        android:textSize="@dimen/x14"
                        app:typeface="@string/font_normal_dark"/>

                    <com.ingic.ezhalbatek.technician.ui.views.AnySpinner
                        android:id="@+id/spnType"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/x10"
                        android:layout_height="@dimen/x50"
                        style="@style/SpinnerTheme"
                        android:popupBackground="@color/white"
                        android:spinnerMode="dropdown"
                        android:dropDownSelector="@color/app_red"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:orientation="vertical">

                    <com.ingic.ezhalbatek.technician.ui.views.AnyTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:paddingEnd="@dimen/x2"
                        android:text="@string/model"
                        android:textColor="@color/app_red"
                        android:textSize="@dimen/x14"
                        app:typeface="@string/font_normal_dark"/>

                    <com.ingic.ezhalbatek.technician.ui.views.AnySpinner
                        android:id="@+id/spnModel"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x50"
                        android:layout_marginTop="@dimen/x10"
                        style="@style/SpinnerTheme"
                        android:spinnerMode="dropdown"
                        android:popupBackground="@color/white"
                        android:dropDownSelector="@color/app_red"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:orientation="vertical">

                    <com.ingic.ezhalbatek.technician.ui.views.AnyTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:paddingEnd="@dimen/x2"
                        android:text="@string/quantity"
                        android:textColor="@color/app_red"
                        android:textSize="@dimen/x14"
                        app:typeface="@string/font_normal_dark"/>

                    <com.ingic.ezhalbatek.technician.ui.views.AnySpinner
                        android:id="@+id/spnQuantity"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/x10"
                        android:layout_height="@dimen/x50"
                        style="@style/SpinnerTheme"
                        android:popupBackground="@color/white"
                        android:dropDownSelector="@color/app_red"
                        android:spinnerMode="dropdown"
                        android:visibility="gone"
                        android:layout_gravity="center"/>

                    <EditText
                        android:id="@+id/edtQuantity"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/x10"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_white"
                        android:digits="0123456789"
                        android:maxLines="1"
                        android:inputType="phone"
                        android:hint="@string/quantity"
                        android:paddingStart="@dimen/x10"
                        android:imeOptions="actionDone"
                        android:layout_height="@dimen/x50"
                        android:textSize="@dimen/x14"
                       />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <Button
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="@dimen/x10"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginBottom="@dimen/x10"
            android:background="@drawable/button_red"
            android:text="@string/done"
            android:textAllCaps="false"
            android:textColor="@color/white"
            />
    </LinearLayout>

</ScrollView>