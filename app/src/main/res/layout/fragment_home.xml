<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.45"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/container_profile"
            android:layout_width="@dimen/x150"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x15"
            android:layout_weight="0.5"
            app:cardCornerRadius="@dimen/x10"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            app:cardPreventCornerOverlap="true">

            <ImageView
                android:id="@+id/imgProfileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/x1"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">


            <com.ingic.ezhalbatek.technician.ui.views.AnyTextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/container_profile"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginTop="@dimen/x5"
                android:text="asdasdasdasdasd"
                android:textColor="@color/app_font_black"
                android:textSize="@dimen/x15"
                app:typeface="@string/font_normal_dark" />

            <com.ingic.ezhalbatek.technician.ui.views.AnyTextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtName"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/x5"
                android:text="asdasdasdasdasd"
                android:textColor="@color/app_font_black"
                android:textSize="@dimen/x15"
                app:typeface="@string/font_normal_dark" />

            <com.ingic.ezhalbatek.technician.ui.views.AnyTextView
                android:id="@+id/txtPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtEmail"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/x5"
                android:text="asdasdasdasdasd"
                android:textColor="@color/app_font_black"
                android:textSize="@dimen/x15"
                app:typeface="@string/font_normal_dark" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ItemsParent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.55"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey" />

        <LinearLayout
            android:id="@+id/ll_ItemsFirstRow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/btnNewJobs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/new_job" />

                <com.ingic.ezhalbatek.technician.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/iv_profile"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="@string/new_jobs"
                    android:textColor="@color/app_font_black"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/font_normal_dark" />

            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/grey" />

            <RelativeLayout
                android:id="@+id/btnReceivePayments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_newJobs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/payments" />

                <com.ingic.ezhalbatek.technician.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/iv_newJobs"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="@string/receive_payments"
                    android:textColor="@color/app_font_black"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/font_normal_dark" />
            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey" />

        <LinearLayout
            android:id="@+id/ll_ItemsSecondtRow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/x5"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/btnHistory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@drawable/orderhistory" />

                <com.ingic.ezhalbatek.technician.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/iv_history"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="@string/order_history"
                    android:textColor="@color/app_font_black"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/font_normal_dark" />

            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/grey" />

            <RelativeLayout
                android:id="@+id/btnCustomerMasterList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@drawable/customer_master_list" />

                <com.ingic.ezhalbatek.technician.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/iv_notification"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="@string/curtomer_master_list"
                    android:textColor="@color/app_font_black"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/font_normal_dark" />
            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey" />


    </LinearLayout>


</LinearLayout>