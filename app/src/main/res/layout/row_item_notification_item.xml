<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/mainFrameLayout"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_mainFrame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_margin="@dimen/x10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_Notificationlogo"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:scaleType="centerInside"
            android:src="@drawable/logo_round"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_jobNotification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:layout_weight="0.8"
            android:gravity="center|start"

            android:text="No Electricity in some rooms"
            android:textColor="@color/app_font_gray"
            android:textSize="@dimen/x14" />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:src="@drawable/rightarrow"
            android:visibility="visible"

            />


    </LinearLayout>

    <View
        android:id="@+id/txt_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"

        android:alpha="0.6"
        android:background="@color/camera_color" />

</LinearLayout>